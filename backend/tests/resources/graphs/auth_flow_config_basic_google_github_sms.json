{
    "id": "auth_flow_config_basic_google_github_sms",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "choose_auth",
            "type": "DECISION",
            "next": [
                "basic_auth",
                "google_auth",
                "github_auth",
                "prompt_mobile"
            ]
        },
        {
            "id": "basic_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "BasicAuthExecutor"
            },
            "next": [
                "sms_otp_auth"
            ]
        },
        {
            "id": "google_auth",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "nonce",
                    "type": "string",
                    "required": false
                }
            ],
            "executor": {
                "name": "GoogleOIDCAuthExecutor",
                "idpName": "Google"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "github_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "GithubOAuthExecutor",
                "idpName": "Github"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "prompt_mobile",
            "type": "PROMPT_ONLY",
            "inputData": [
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "next": [
                "sms_otp_auth"
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "SMSOTPAuthExecutor",
                "properties": {
                    "senderId": "<your-sender-id>"
                }
            },
            "next": [
                "attr_collector"
            ]
        },
        {
            "id": "attr_collector",
            "type": "TASK_EXECUTION",
            "inputData": [
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": false
                }
            ],
            "executor": {
                "name": "AttributeCollector"
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
