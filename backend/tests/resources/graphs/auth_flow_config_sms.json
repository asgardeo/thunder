{
    "id": "auth_flow_config_sms",
    "type": "AUTHENTICATION",
    "nodes": [
        {
            "id": "prompt_mobile",
            "type": "PROMPT_ONLY",
            "inputData": [
                {
                    "name": "mobileNumber",
                    "type": "string",
                    "required": true
                }
            ],
            "next": [
                "sms_otp_auth"
            ]
        },
        {
            "id": "sms_otp_auth",
            "type": "TASK_EXECUTION",
            "executor": {
                "name": "SMSOTPAuthExecutor",
                "properties": {
                    "senderId": "<your-sender-id>"
                }
            },
            "next": [
                "authenticated"
            ]
        },
        {
            "id": "authenticated",
            "type": "AUTHENTICATION_SUCCESS"
        }
    ]
}
